<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phonebook.ContactDetailPage"
             Title="Контакт">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Фото контакта -->
            <Frame HeightRequest="150" 
                   WidthRequest="150"
                   CornerRadius="75"
                   HorizontalOptions="Center"
                   Padding="0"
                   IsClippedToBounds="True">
                <Image x:Name="contactImage"
                       Source="person.png"
                       Aspect="AspectFill"
                       HeightRequest="150"
                       WidthRequest="150">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnImageTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </Frame>

            <Label Text="Нажмите на фото для изменения"
                   HorizontalOptions="Center"
                   FontSize="12"
                   TextColor="Gray" />

            <!-- Имя -->
            <Label Text="Имя" FontAttributes="Bold" />
            <Entry x:Name="nameEntry" Placeholder="Введите имя" />

            <!-- Телефон -->
            <Label Text="Телефон" FontAttributes="Bold" />
            <Entry x:Name="phoneEntry" Placeholder="Введите номер телефона" Keyboard="Telephone" />

            <!-- Email -->
            <Label Text="Email" FontAttributes="Bold" />
            <Entry x:Name="emailEntry" Placeholder="Введите email" Keyboard="Email" />

            <!-- Адрес -->
            <Label Text="Адрес" FontAttributes="Bold" />
            <Entry x:Name="addressEntry" Placeholder="Введите адрес" />

            <!-- Описание -->
            <Label Text="Описание" FontAttributes="Bold" />
            <Editor x:Name="descriptionEntry" 
                    Placeholder="Введите описание"
                    HeightRequest="100"
                    AutoSize="TextChanges" />

            <!-- Кнопки -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
                <Button Text="Сохранить"
                        BackgroundColor="Green"
                        TextColor="White"
                        Clicked="OnSaveClicked" />
                <Button Text="Удалить"
                        BackgroundColor="Red"
                        TextColor="White"
                        Clicked="OnDeleteClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>